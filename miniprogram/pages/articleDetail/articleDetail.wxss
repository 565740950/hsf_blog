/* pages/articleDetail/articleDetail.wxss */

.article .top-title {
  margin: 10rpx 0 10rpx 30rpx;
}

.article .content {
  margin-bottom: 110rpx;
}

.article .content .article-item {
  display: flex;
  flex-direction: column;
}

.article .content .article-item .title {
  display: flex;
  justify-content: center;
}

.article .content .article-item .title label {
  margin: 10rpx;
  font-size: 32rpx;
}

.article .content .article-item .img {
  display: flex;
  justify-content: center;
}

.article .content .article-item .img .class-img {
  height: 300rpx;
  width: 640rpx;
  border-radius: 20rpx;
}

.article .content .article-item .img .class-no-img {
  width: 0rpx;
  height: 0rpx;
}

.article .content .article-item .content-text {
  margin: 10rpx 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.article .article-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  margin-top: 20rpx;
  justify-content: space-between;
  margin-left: 20rpx;
}

.article .article-bottom view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.article .article-bottom image {
  width: 40rpx;
  height: 40rpx;
}

.article .article-bottom view text {
  font-size: 22rpx;
  margin-bottom: 7rpx;
}

.article .article-bottom .time {
  flex: 1.5;
}

.article .article-bottom .comment-count {
  flex: 1;
}

.article .article-bottom .read-count {
  flex: 1;
}

.article .article-bottom .poll-count {
  flex: 1;
}

.article .fixed-bottom {
  position: fixed;
  bottom: 0;
  height: 85rpx;
  background: #f6f6f6;
  width: 100%;
}

.article .fixed-bottom .flex {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.article .fixed-bottom .flex view {
  display: flex;
  flex-direction: column;
  width: 33%;
  justify-content: center;
  align-items: center;
}

.article .fixed-bottom .flex image {
  width: 45rpx;
  height: 45rpx;
}

.article .fixed-bottom .flex label {
  font-size: 25rpx;
}

.article .comment {
  /* margin-bottom: 130rpx; */
}

.article .comment .commentList {
  display: flex;
  flex-direction: column;
  margin: 5rpx 15rpx;
  background: #f1f1f1;
  padding: 10rpx;
}

.article .comment .commentList .top-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.article .comment .commentList .top-info .img-name {
  display: flex;
  align-items: center;
}

.article .comment .commentList .top-info .img-name  image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.article .comment .commentList .top-info .img-name label {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.article .comment .commentList .top-info .img-name text {
  margin-left: 60%;
  font-size: 28rpx;
  justify-self: right;
}

.article .comment .commentList .father-content {
  font-size: 30rpx;
  margin: 15rpx 10rpx;
}

.article .comment .commentList .father-content text {
}

.article .comment .commentList .children-content {
  padding: 5rpx;
}

.article .comment .commentList .children-content .childComment {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.article .comment .commentList .children-content .childComment .nickName {
  font-size: 23rpx;
  color: #1296db;
}

.article .comment .commentList .children-content .childComment .opposite-nickName {
  font-size: 23rpx;
  color: #1296db;
}

.article .comment .commentList .children-content .childComment .huifu {
  font-size: 23rpx;
  margin: 0 10rpx;
}

.article .comment .commentList .children-content .childComment .comment-text {
  font-size: 28rpx;
  margin-left: 15rpx;
}
