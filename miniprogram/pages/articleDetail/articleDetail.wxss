.article .top-title {
  margin: 10rpx 0 10rpx 30rpx;
}

.article .content {
  margin-bottom: 110rpx;
}

.article .content .article-item {
  display: flex;
  flex-direction: column;
}

.article .content .article-item .title {
  display: flex;
  justify-content: center;
}

.article .content .article-item .title label {
  margin: 10rpx;
  font-size: 32rpx;
}

.article .content .article-item .img {
  display: flex;
  justify-content: center;
}

.article .content .article-item .img .class-img {
  height: 300rpx;
  width: 640rpx;
  border-radius: 20rpx;
}

.article .content .article-item .img .class-no-img {
  width: 0rpx;
  height: 0rpx;
}

.article .content .article-item .content-text {
  margin: 10rpx 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.article .article-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  margin-top: 20rpx;
  justify-content: space-between;
  margin-left: 20rpx;
}

.article .article-bottom view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.article .article-bottom image {
  width: 40rpx;
  height: 40rpx;
}

.article .article-bottom view text {
  font-size: 22rpx;
  margin-bottom: 7rpx;
}

.article .article-bottom .time {
  flex: 1.5;
}

.article .article-bottom .comment-count {
  flex: 1;
}

.article .article-bottom .read-count {
  flex: 1;
}

.article .article-bottom .poll-count {
  flex: 1;
}

.article .fixed-bottom {
  position: fixed;
  bottom: 0;
  height: 85rpx;
  background: #f6f6f6;
  width: 100%;
}

.article .fixed-bottom .flex {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.article .fixed-bottom .flex view {
  display: flex;
  flex-direction: column;
  width: 33%;
  justify-content: center;
  align-items: center;
}

.article .fixed-bottom .flex image {
  width: 45rpx;
  height: 45rpx;
}

.article .fixed-bottom .flex label {
  font-size: 25rpx;
}
