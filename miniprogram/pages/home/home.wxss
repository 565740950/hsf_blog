.home {
  /* background:#f5f5f5; */
}

.home .slide-image {
  width: 100%;
  height: 300rpx;
}

.home .classfication {
  display: flex;
  /* background:#fff; */
  flex-direction: row;
  justify-content: space-around;
  margin: 15rpx 0;
}

.home .classfication .classfication-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.home .classfication .classfication-view .image {
  width: 120rpx;
  height: 120rpx;
  background: #fefe;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home .classfication .classfication-view .image image {
  width: 60rpx;
  height: 60rpx;
}

.home .classfication .classfication-view .name {
  font-size: 25rpx;
  margin-top: 5rpx;
}

.home .article {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  height: 200rpx;
  /* justify-content: center; */
  align-items: center;
}

.home .article .article-img {
  width: 170rpx;
  height: 160rpx;
  margin-left: 10rpx;
}

.home .article .article-img image {
  width: 170rpx;
  height: 160rpx;
}

.home .article .article-text {
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  color: #515151;
  margin-left: 20rpx;
}

.home .article .article-text .title {
  font-size: 30rpx;
  font-weight: 600;
  height: 50rpx;
}

.home .article .article-text .summary {
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.home .article .article-text .article-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}

.home .article .article-text .article-bottom view {
  display: flex;
  align-items: center;
}

.home .article .article-text .article-bottom image {
  width: 40rpx;
  height: 40rpx;
}

.home .article .article-text .article-bottom view text {
  font-size: 22rpx;
}

.home .article .article-text .article-bottom .comment-count {
  margin-left: 40rpx;
}

.home .article .article-text .article-bottom .read-count {
  margin-left: 40rpx;
}

.home .article .article-text .article-bottom .poll-count {
  margin-left: 40rpx;
}
